{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "src/main.tsx",
    "src/main.jsx",
    "./src/**/*.jsx",
    "/*.jsx",
    "./src/**/*.jsx",
    "/*.png",
    "/*.jpg",
    "src/**/*.ts",
    "./src/**/*.jsx",
    "src/**/*.js",
    "./src/**/*.tsx",
    "src/**/*.jsx",
    "/*.jpeg"
  ],
  "exclude": ["node_modules"]
}
